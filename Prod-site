  <!-- ================= SCRIPTS ================= -->
  <script>
    // Theme toggle
    const root = document.documentElement;
    const THEME_KEY = 'site-theme';
    function applyTheme(theme) { theme === 'dark' ? root.classList.add('dark') : root.classList.remove('dark'); }
    (function initTheme(){ const saved=localStorage.getItem(THEME_KEY); const prefersDark=matchMedia('(prefers-color-scheme: dark)').matches; applyTheme(saved || (prefersDark?'dark':'light')); })();
    document.getElementById('themeBtn').addEventListener('click', ()=>{ const isDark=root.classList.toggle('dark'); localStorage.setItem(THEME_KEY, isDark?'dark':'light'); });

    // Tiny helper
    const $ = s => document.querySelector(s);
    const el = (t, opts = {}, kids = []) => { const e = document.createElement(t); Object.entries(opts).forEach(([k,v])=>{ if(k==='class') e.className=v; else if(k==='text') e.textContent=v; else if(k==='html') e.innerHTML=v; else if(k==='href') e.setAttribute('href', v); else e.setAttribute(k,v); }); kids.forEach(k=>e.appendChild(k)); return e; };

    function render() {
      // Header + hero basics
      $('#nav-name').textContent = PROFILE.name;
      $('#name').textContent = PROFILE.name;
      $('#footer-name').textContent = PROFILE.name;
      $('#role').textContent = PROFILE.role;
      $('#tagline').textContent = PROFILE.tagline;
      $('#years').textContent = PROFILE.yearsExperience;
      $('#location').textContent = PROFILE.location;
      $('#year').textContent = new Date().getFullYear();
      const email = $('#email-cta'); email.href = `mailto:${PROFILE.email}`; email.textContent = PROFILE.email;
      const emailHero = $('#email-cta-hero'); emailHero.href = `mailto:${PROFILE.email}`;

      // Availability
      const avail = $('#availability');
      avail.textContent = PROFILE.available ? '‚úÖ Available for new opportunities' : 'üü° Not currently looking';
      if (!PROFILE.available) avail.className = 'inline-flex items-center gap-2 px-2.5 py-1 rounded-full text-xs bg-yellow-100 text-yellow-700 border border-yellow-200';

      // Socials
      const socialsWrap = $('#socials'); const ctaSocials = $('#cta-socials');
      PROFILE.socials.forEach(s => {
        const a = el('a', { href:s.url, target:'_blank', rel:'noreferrer', class:'px-3 py-1.5 rounded-xl border border-slate-300 dark:border-slate-700 text-xs hover:bg-blueteam hover:text-white transition', text:s.label });
        socialsWrap.appendChild(a.cloneNode(true)); ctaSocials.appendChild(a);
      });

      // Core expertise chips
      const core = $('#core');
      PROFILE.SuperPowers.forEach(skill => core.appendChild(el('div', { class:'px-3 py-2 rounded-xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 text-sm' , text: skill })));

      // Professional focus cards
      const pro = $('#pro-focus');
      PROFILE.focus.forEach(item => {
        pro.appendChild(el('div', { class:'p-4 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900' }, [
          el('h4', { class:'font-semibold text-redteam', text:item.title }),
          el('p', { class:'mt-1 text-sm text-slate-600 dark:text-slate-300', text:item.details })
        ]));
      });

      // Skills bars
      const skills = $('#skills');
      PROFILE.skills.forEach(s => {
        const wrap = el('div', { class:'w-full' });
        wrap.appendChild(el('div', { class:'flex justify-between text-xs mb-1 text-slate-500' }, [ el('span', { text:s.label }), el('span', { text:s.level + '%' }) ]));
        const bar = el('div', { class:'h-2 rounded-full bg-slate-200 dark:bg-slate-800 overflow-hidden' });
        const fill = el('div', { class:'h-2 rounded-full bg-gradient-to-r from-blueteam to-redteam' });
        fill.style.width = Math.min(Math.max(s.level, 0), 100) + '%';
        bar.appendChild(fill); wrap.appendChild(bar); skills.appendChild(wrap);
      });

      // Major projects
      const major = $('#major-projects');
      PROFILE.majorProjects.forEach(p => {
        const wrapper = el('a', { class:'group p-5 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 hover:shadow-glow transition block', href: p.link || '#', target:'_blank' });
        wrapper.appendChild(el('div', { class:'flex items-baseline justify-between' }, [ el('h4', { class:'font-semibold text-lg group-hover:text-redteam', text:p.name }), el('span', { class:'text-xs text-slate-500', text:p.period }) ]));
        const ul = el('ul', { class:'mt-3 list-disc pl-5 text-sm space-y-1 text-slate-700 dark:text-slate-300' });
        p.highlights.forEach(h => ul.appendChild(el('li', { text: h })));
        wrapper.appendChild(ul); major.appendChild(wrapper);
      });

      // Featured projects grid
      const featured = $('#featured-projects');
      PROFILE.featuredProjects.forEach(p => {
        const card = el('a', { href:p.url, target:'_blank', rel:'noreferrer', class:'block p-5 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 hover:shadow-md transition' });
        card.appendChild(el('h4', { class:'font-semibold', text:p.name }));
        card.appendChild(el('p', { class:'mt-1 text-sm text-slate-600 dark:text-slate-300', text:p.description }));
        const tags = el('div', { class:'mt-3 flex flex-wrap gap-2' });
        p.tags.forEach(t => tags.appendChild(el('span', { class:'px-2 py-0.5 rounded-lg text-xs border border-slate-300 dark:border-slate-700', text:t })));
        card.appendChild(tags); featured.appendChild(card);
      });

      // Articles
      const articles = $('#article-list');
      PROFILE.articles.forEach(a => {
        const card = el('a', { href:a.url, target:'_blank', class:'block p-5 rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 hover:shadow-md transition' });
        card.appendChild(el('div', { class:'text-xs text-slate-500', text: new Date(a.date).toLocaleDateString() }));
        card.appendChild(el('h4', { class:'font-semibold mt-1 text-redteam', text:a.title }));
        card.appendChild(el('p', { class:'mt-1 text-sm text-slate-600 dark:text-slate-300', text:a.summary }));
        articles.appendChild(card);
      });

      // Speaking timeline
      const speaking = $('#speaking-list');
      PROFILE.speaking.forEach(s => {
        const li = el('li', { class:'mb-6' });
        const dot = el('span', { class:'absolute -left-[9px] mt-1 w-4 h-4 rounded-full bg-redteam shadow-glow' });
        li.appendChild(dot);
        li.appendChild(el('div', { class:'ml-2' }, [
          el('div', { class:'text-xs text-slate-500', text: new Date(s.date).toLocaleDateString() }),
          el('a', { class:'block font-semibold text-blueteam hover:underline', href: s.link || '#', text: `${s.event} ‚Äî ${s.topic}` })
        ]));
        speaking.appendChild(li);
      });

      // Credentials
      PROFILE.certifications.forEach(c => $('#certs').appendChild(el('li', { text:c })));
      PROFILE.credentials.forEach(c => $('#creds').appendChild(el('li', { text:c })));
      PROFILE.development.forEach(d => $('#dev').appendChild(el('li', { text:d })));
    }

    render();
  </script>
</body>
</html>
